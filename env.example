# HC Approval System - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SLACK CONFIGURATION
# =============================================================================
# Get these from https://api.slack.com/apps

# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# App-Level Token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token-here

# =============================================================================
# LINEAR CONFIGURATION  
# =============================================================================
# Get API key from https://linear.app/settings/api

# Linear API Key (starts with lin_api_)
LINEAR_API_KEY=lin_api_your-key-here

# Your Linear Team ID (find in team settings URL)
LINEAR_TEAM_ID=your-team-id-here

# Linear Workflow State IDs (get from your Linear workspace)
LINEAR_STATE_IDS__TRIAGE=state-id-triage
LINEAR_STATE_IDS__QUEUED_FOR_FINANCE=state-id-queued
LINEAR_STATE_IDS__TODO=state-id-todo
LINEAR_STATE_IDS__FINANCE_REVIEW=state-id-finance-review
LINEAR_STATE_IDS__APPROVED=state-id-approved
LINEAR_STATE_IDS__OPENED_IN_ASHBY=state-id-opened
LINEAR_STATE_IDS__PENDING_OFFER=state-id-pending-offer
LINEAR_STATE_IDS__HIRED=state-id-hired

# =============================================================================
# ASHBY CONFIGURATION (Optional)
# =============================================================================

ASHBY_API_KEY=your-ashby-api-key-here
ASHBY_WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=3000
NODE_ENV=production

